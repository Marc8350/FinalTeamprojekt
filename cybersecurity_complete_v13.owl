  <hasOrigin rdf:resource="#human"/>
  <hasSource rdf:resource="#Accidental"/>
  <description rdf:datatype="http://www.w3.org/2001/XMLSchema#string">Es gibt zu viele Administrierende, und es ist nicht klar geregelt, wer fuer welche Aufgaben zustaendig ist.</description>
</owl:NamedIndividual>

