</owl:NamedIndividual>

<owl:NamedIndividual rdf:about="#Offenlegung schuetzenswerter Informationen durch fehlerhafte Konfiguration">
  <rdf:type rdf:resource="#Vulnerability"/>
  <hasInformationSource rdf:resource="#BSI GSK 2023"/>
  <exploitedBy_exapmle rdf:resource="#Misconfigured access controls"/>
  <exploitedBy_exapmle rdf:resource="#Unnecessary features"/>
  <description rdf:datatype="http://www.w3.org/2001/XMLSchema#string">Misconfigured software can unintentionally expose sensitive information. For example, unnecessary features like cloud backups might inadvertently synchronize data, making it accessible to unauthorized parties. This can lead to financial losses, reputational damage, and legal violations.</description>
</owl:NamedIndividual>

<owl:NamedIndividual rdf:about="#Unnecessary features">
  <rdf:type rdf:resource="#Threat_example"/>
  <hasInformationSource rdf:resource="#BSI GSK 2023"/>
