  <rdf:type rdf:resource="#Threat_example"/>
  <hasInformationSource rdf:resource="#BSI GSK 2023"/>
  <hasOrigin rdf:resource="#human"/>
  <hasSource rdf:resource="#Accidental"/>
  <description rdf:datatype="http://www.w3.org/2001/XMLSchema#string">Daten koennen verloren gehen, wenn Exchange fehlerhaft und ungeregelt in das Active Directory eingebunden wird.</description>
