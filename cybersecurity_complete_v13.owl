</owl:NamedIndividual>

<owl:NamedIndividual rdf:about="#Accidental data deletion">
  <rdf:type rdf:resource="#Threat_example"/>
  <hasInformationSource rdf:resource="#BSI GSK 2023"/>
  <description rdf:datatype="http://www.w3.org/2001/XMLSchema#string">Users accidentally delete data, disrupting business processes.</description>
</owl:NamedIndividual>

<owl:NamedIndividual rdf:about="#Incorrect encryption">
  <rdf:type rdf:resource="#Threat_example"/>
  <hasInformationSource rdf:resource="#BSI GSK 2023"/>
