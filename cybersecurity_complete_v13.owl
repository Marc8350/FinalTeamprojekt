  <description rdf:datatype="http://www.w3.org/2001/XMLSchema#string">Ein Angreifer kann Daten auf einem Samba-Server loeschen oder ueberschreiben.</description>
</owl:NamedIndividual>

<owl:NamedIndividual rdf:about="#Integritaetsverlust schuetzenswerter Informationen bei Samba">
  <rdf:type rdf:resource="#Vulnerability"/>
