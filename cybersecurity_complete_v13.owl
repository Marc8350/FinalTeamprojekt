</owl:NamedIndividual>

<owl:NamedIndividual rdf:about="#Inhomogener und unkoordinierter Einsatz von Sicherheitsprodukten">
  <rdf:type rdf:resource="#Threat_example"/>
  <hasInformationSource rdf:resource="#BSI GSK 2023"/>
