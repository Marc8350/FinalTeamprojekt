  <isresponsible rdf:datatype="http://www.w3.org/2001/XMLSchema#string">Planende</isresponsible>
</owl:NamedIndividual>

<owl:NamedIndividual rdf:about="#INF.14.A23 Einsatz von physisch robusten Komponenten fuer die GA">
