  <hasSource rdf:resource="#Accidental"/>
  <description rdf:datatype="http://www.w3.org/2001/XMLSchema#string">Fehlplanung von Prozessen fuehrt dazu, dass der IT-Betrieb nur unzureichend ausgefuehrt wird.</description>
</owl:NamedIndividual>

<owl:NamedIndividual rdf:about="#Inkorrekt ausgefuehrte Taetigkeiten">
  <rdf:type rdf:resource="#Threat_example"/>
