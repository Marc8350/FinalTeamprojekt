<owl:NamedIndividual rdf:about="#Unerlaubte Anbindung anderer Systeme an Exchange">
  <rdf:type rdf:resource="#Vulnerability"/>
  <hasInformationSource rdf:resource="#BSI GSK 2023"/>
  <exploitedBy_exapmle rdf:resource="#Datenverlust durch Inkonsistenzen"/>
  <exploitedBy_exapmle rdf:resource="#Datenverlust durch inkompatible Konnektoren"/>
