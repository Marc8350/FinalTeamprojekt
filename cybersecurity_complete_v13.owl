  <hasInformationSource rdf:resource="#BSI GSK 2023"/>
  <hasOrigin rdf:resource="#human"/>
  <hasSource rdf:resource="#Accidental"/>
  <description rdf:datatype="http://www.w3.org/2001/XMLSchema#string">Softwarefehler, die waehrend der Tests gefunden wurden, wurden nicht ausreichend dokumentiert und bleiben daher unerkannt.</description>
</owl:NamedIndividual>

<owl:NamedIndividual rdf:about="#Datenverlust durch fehlende Dokumentation">
  <rdf:type rdf:resource="#Threat_example"/>
