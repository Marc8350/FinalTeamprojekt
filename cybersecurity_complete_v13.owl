<owl:NamedIndividual rdf:about="#Preisgabe von schuetzenswerten Informationen">
  <rdf:type rdf:resource="#Vulnerability"/>
  <hasInformationSource rdf:resource="#BSI GSK 2023"/>
  <exploitedBy_exapmle rdf:resource="#Unbemerkte Speicherung von Konversationen"/>
