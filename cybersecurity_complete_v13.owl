</owl:NamedIndividual>

<owl:NamedIndividual rdf:about="#Eingeschraenkte oder fehlende Verfuegbarkeit von IT-Systemen">
  <rdf:type rdf:resource="#Threat_example"/>
  <hasInformationSource rdf:resource="#BSI GSK 2023"/>
  <hasOrigin rdf:resource="#human"/>
  <hasSource rdf:resource="#Accidental"/>
  <description rdf:datatype="http://www.w3.org/2001/XMLSchema#string">IT-Systeme sind nur eingeschraenkt oder gar nicht mehr verfuegbar.</description>
